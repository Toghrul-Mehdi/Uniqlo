<!-- Start Product Details -->
<section class="htc__product__details pt--120 pb--100 bg__white">
	<div class="container">
		<div class="row">
			<div class="col-md-12 col-lg-6 col-sm-12">
				<div class="product__details__container">
					<!-- Start Small images -->
					<ul class="nav product__small__images d-flex">
						@foreach (var item in Model.Images?.Select(x => x.ImageUrl) ?? [])
						{
							<li role="presentation" class="pot-small-img d-flex">
								<a class="active">
									<img class="kicik" style="width:167px" src="~/img/products/@item" alt="small-image">
								</a>
							</li>
						}
					</ul>
					<ul>
						<li role="presentation" class="pot-small-img">
							<a class="active" >
								<img class="boyuk" style="width:500px" src="~/img/products/@Model.CoverImage" alt="small-image">
							</a>
						</li>
					</ul>
					<!-- End Small images -->
				</div>
			</div>
			<div class="col-md-12 col-lg-6 col-sm-12 smt-30 xmt-30">
				<div class="htc__product__details__inner">
					<div class="pro__detl__title">
						<h2>@Model.ProductName</h2>
					</div>
					<form asp-action="Rating" method="get">
						<input name="ProductId" value="@Model.Id" type="hidden" />
						<input name="rating" value="@ViewBag.Rating" type="number" min="1" max="5" />
						<button type="submit" class="btn btn-link">Rate</button>
					</form>
					<div class="pro__dtl__rating">
						<ul class="pro__rating">
							@for (int i = 0; i < Math.Ceiling(rating); i++)
							{
								<li><span class="ti-star"></span></li>
							}
							(@rating)
						</ul>
						<span class="rat__qun">(Based on @Model.ProductRatings.Count Ratings)</span>
					</div>
					<div class="pro__details">
						<p>@Model.ProductDescription </p>
					</div>
					<ul class="pro__dtl__prize">
						<li class="old__prize">$@Model.SellPrice</li>
						<li>$@Model.CostPrice</li>
					</ul>

				</div>
			</div>
		</div>
	</div>
</section>
