		$(document).ready(function () {
			$('.kicik').on('click', function (e) {
				e.preventDefault();
				var kicikSrc = $(this).attr('src');
				var boyukSrc = $('.boyuk').attr('src');
				$(this).attr('src', boyukSrc);
				$('.boyuk').attr('src', kicikSrc);
			});
		});
	</script>
}