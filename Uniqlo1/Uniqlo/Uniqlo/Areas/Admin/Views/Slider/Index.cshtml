@model List<Slider>
@{
    ViewData["Title"] = "Index";
}
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Slider List</h6>
            <a asp-action="Create" asp-controller="Slider" class="btn btn-outline-primary ml-auto">Create</a>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">Title</th>
                        <th scope="col">Subtitle</th>
                        <th colspan="3" scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td><img asp-append-version="true" src="~/img/sliders/@item.ImageUrl" width="50" /></td>
                            <td>@item.Title</td>
                            <td>@item.Subtitle</td>
                            <td>
                                <a class="btn btn-success" asp-action="Update" asp-controller="Slider" asp-route-id="@item.Id">Update</a>
                            </td>
                            <td>
                                <a class="btn btn-danger" asp-action="Delete" asp-controller="Slider" asp-route-id="@item.Id">Delete</a>
                            </td>
                            @if (!item.IsDeleted)
                            {
                                <td>
                                    <a class="btn btn-secondary" asp-action="Hide" asp-controller="Slider" asp-route-id="@item.Id">Hide</a>
                                </td>
                            }
                            else
                            {
                                <td>
                                    <a class="btn btn-warning" asp-action="Show" asp-controller="Slider" asp-route-id="@item.Id">Show</a>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


</div>
