@model Uniqlo.ViewModel.CategoryCreateVM

@{
    ViewData["Title"] = "Create";
}
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">Create Category</h1>
    <a asp-action="Index" asp-controller="Category" class="btn btn-outline-primary ml-auto">Return List</a>
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="CategoryName"></label>
            <input asp-for="CategoryName" class="form-control">
            <span asp-validation-for="CategoryName" class="text-small text-danger"></span>
        </div>        
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
